@page "{IntIdCliente:int?}"
@model CRUD_Clientes.Pages.Crear_ClienteModel
@{
    ViewData["Title"] = "Creando Cliente";
}

<h2>Creando nuevo cliente</h2>

<form method="post">
    <input type="hidden" asp-for="Cliente.IntIdCliente" />

    <div class="form-group">
        <label asp-for="Cliente.StrNombre">Nombre</label>
        <input asp-for="Cliente.StrNombre" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Cliente.StrNombre"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cliente.StrApellido">Apellido</label>
        <input asp-for="Cliente.StrApellido" type="text" class="form-control" />
        <span class="text-danger" asp-validation-for="Cliente.StrApellido"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cliente.DtFechaNacimineto">Fecha de Nacimiento</label>
        <input asp-for="Cliente.DtFechaNacimineto" type="date" />

    </div>

    <div class="form-group">
        <label asp-for="Cliente.ESexo">Sexo</label>
        <select asp-for="Cliente.ESexo" asp-items="@Model.Sexo" class="form-control">
        </select>
    </div>

    <div class="form-controlB">
        <label asp-for="Cliente.StrDirección">Dirección</label>
        <input asp-for="Cliente.StrDirección" type="text" class="form-controlB" />
        <span class="text-danger" asp-validation-for="Cliente.StrDirección"></span>

        <buttom Id="BtnAgregar" class="btn btn-primary" style="text-align: right"><i class='fa fa-plus'></i></buttom>
    </div>

    <div class="form-controlB" id="AgregarTextBox">
        
    </div>


    <button type="submit" class="btn btn-primary">Guardar cambios</button>
</form>


@section Scripts {
    <script src="~/js/JavaScript.js"></script>
}

